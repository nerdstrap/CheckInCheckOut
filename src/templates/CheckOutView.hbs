<h3>{{resource "checkOutViewHeaderText"}}</h3>
<div class="row">
    <div class="small-12 columns read-only-field">
        <span id="locus-name-label" data-locus-id="{{locusId}}">{{withDefault locusName "&nbsp;"}}</span>
        <label for="locus-name-label">{{resource "locusNameHeaderText"}}</label>
    </div>
</div>
<div class="row">
    <div class="small-12 columns read-only-field">
        <span id="distance-label" name="distance">{{withDefault distance "&nbsp;"}}</span>
        <label for="distance-label">{{resource "distanceHeaderText"}}</label>
    </div>
</div>
<div id="locus-description-input-container" class="row hidden">
    <div class="small-12 columns input-field">
        <input id="locus-description-input" name="locusName" type="text" class="validate required" placeholder='{{resource "locusDescriptionPlaceholder"}}'/>
        <label for="locus-description-input">{{resource "locusNameHeaderText"}}</label>
    </div>
</div>
<div id="coordinates-input-container" class="row hidden">
    <div class="small-12 columns input-field">
        <input id="latitude-input" name="latitude" type="text" class="validate required" placeholder='{{resource "latitudePlaceholder"}}'/>
        <input id="longitude-input" name="longitude" type="text" class="validate required" placeholder='{{resource "longitudePlaceholder"}}'/>
        <label for="latitude-input">{{resource "coordinatesHeaderText"}}</label>
    </div>
</div>
<div class="row">
    <div class="small-12 columns input-field">
        <input id="contact-number-input" name="contactNumber" type="text" class="validate required pattern" placeholder='{{resource "contactNumberPlaceholder"}}' spellcheck="false" autocomplete="off" autocorrect="off" autocapitalization="off"/>
        <label for="contact-number-input">{{resource "contactNumberHeaderText"}}</label>
    </div>
</div>
<div class="row">
    <div class="small-12 columns input-field">
        <input id="email-input" name="email" type="text" class="validate pattern" placeholder='{{resource "emailPlaceholder"}}' spellcheck="false" autocomplete="off" autocorrect="off" autocapitalization="off"/>
        <label for="email-input">{{resource "emailHeaderText"}}</label>
    </div>
</div>
<div class="row">
    <div class="small-12 columns input-field">
        <select id="purpose-input" name="purpose" class="validate required">
            <option disabled="disabled" selected="selected" value="">{{resource "purposePlaceholder"}}</option>
        </select>
        <label for="purpose-input">{{resource "purposeHeaderText"}}</label>
    </div>
</div>
<div id="purpose-other-input-container" class="row hidden">
    <div class="small-12 columns input-field">
        <input id="purpose-other-input" name="purposeOther" type="text" class="validate required" placeholder='{{resource "purposeOtherPlaceholder"}}' spellcheck="false" autocomplete="off" autocorrect="off" autocapitalization="off"/>
        <label for="purpose-other-input">{{resource "purposeOtherHeaderText"}}</label>
    </div>
</div>
<div class="row">
    <div class="small-12 columns input-field">
        <select id="duration-input" name="duration" class="validate required">
            <option disabled="disabled" selected="selected" value="">{{resource "durationPlaceholder"}}</option>
        </select>
        <label for="duration-input">{{resource "durationHeaderText"}}</label>
    </div>
</div>
<div class="row">
    <div class="small-12 columns input-field">
        <input id="group-check-in-input" name="groupCheckIn" type="checkBox"/>
        <label for="group-check-in-input">{{resource "groupCheckInHeaderText"}}</label>
    </div>
</div>
<div class="row">
    <div class="small-12 columns input-field">
        <input id="additional-info-input" name="additionalInfo" type="text" placeholder='{{resource "additionalInfoPlaceholder"}}' spellcheck="false" autocomplete="off" autocorrect="off" autocapitalization="off"/>
        <label for="additional-info-input">{{resource "additionalInfoHeaderText"}}</label>
    </div>
</div>
<div id="check-out-view-loading-icon-container" class="hidden">
    <img src="{{resource 'loadingIconSrc'}}" alt="" />
</div>
<div id="check-out-alerts-container">
</div>
<div class="row">
    <div class="small-12 columns">
        <a id="cancel-check-out-button" class="button radius secondary" href="#">{{resource "cancelButtonText"}}</a>
        <a id="submit-check-out-button" class="button radius success" href="#">{{resource "checkOutButtonText"}}<i class="fa fa-minus-square-o"></i></a>
    </div>
</div>
